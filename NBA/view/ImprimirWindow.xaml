<Window x:Class="NBA.ImprimirWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBA"
        mc:Ignorable="d"
        Title="ImprimirWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DocumentViewer Name="documentViewer" Margin="10" Height="700" Width="800"/>
            <Button Content="Imprimir" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Padding="10" Background="NavajoWhite" Foreground="White" FontWeight="Bold" FontSize="20" BorderBrush="Orange" Click="Aceptar_Click" />
            <Button Content="Cancelar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Padding="10" Background="Red" Foreground="White" FontWeight="Bold" FontSize="20" BorderBrush="Orange" Click="Cancelar_Click" />
        </StackPanel>
    </Grid>
</Window> 
