<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label Text="Página de INICIO del Ejemplo de MAUI"
                   HorizontalTextAlignment="Center"
                   FontFamily="Arial"
                   FontSize="20"
                   FontAttributes="Bold"
                   />

            <Label Text="Vamos a probar la navegación con Shell"
                   HorizontalTextAlignment="Center"
                   FontFamily="Arial"
                   FontSize="20"
                   FontAttributes="Bold"
                   />

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                BackgroundColor="DarkBlue"
                TextColor="White"
                />

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button
                    x:Name="BIrCalc"
                    Text="Ir a la Calculadora"
                    SemanticProperties.Hint="Te lleva a la calculadora"
                    Clicked="BIr_Clicked"
                    HorizontalOptions="Fill"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    />

                <Button
                    x:Name="BIrConv"
                    Text="Ir al Conversor de Binario"
                    SemanticProperties.Hint="Te lleva a la función de conversor de Binario a Decimal"
                    Clicked="BIr_Clicked"
                    HorizontalOptions="Fill"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    />
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
